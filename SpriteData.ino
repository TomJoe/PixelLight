void renderSprite(int spriteID, int xPos, int yPos, bool clear) {

  if (clear) {
    for (int j = 0; j < NUM_LEDS; j++) {
      leds[j] = CRGB::Black;
    };
  };

  //Serial.print("sprite"); Serial.println(spriteID);
  byte frame_height = pgm_read_byte(pgm_read_word(&(sprites[spriteID])) + 1);
  byte frame_width = pgm_read_byte(pgm_read_word(&(sprites[spriteID])));
  /*Serial.println(frame_width);
    Serial.println(frame_height);
    Serial.println(xPos);
    Serial.println(yPos);*/
  for (int y = 0; y < frame_height; y++) {
    for (int x = 0; x < frame_width; x++) {
      byte color = pgm_read_byte(pgm_read_word(&(sprites[spriteID])) + 2 + (y * frame_width + x));

      if (color != 0x00) {//0x0 means tranparent
        setPixel(x + xPos, y + yPos,
                 CRGB(
                   21 * ((color & 0xc0) >> 6) * ((color & 0x03) >> 0),
                   21 * ((color & 0xc0) >> 6) * ((color & 0x0c) >> 2),
                   21 * ((color & 0xc0) >> 6) * ((color & 0x30) >> 4)
                 )
                );
      };
    };
  };
};
